<h1>Lista de usuarios</h1>
<%= link_to 'Nuevo Usuario', new_usuario_path, class: "btn btn-success"%>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Correo</th>
    <th Acciones></th>
  </tr>
  </thead>
  <tbody>
  <% @usuarios.each do |usuario| %>
    <tr>
      <td><%= usuario.nombre %></td>
      <td><%= usuario.correo %></td>
      <td><%= link_to 'Ver', usuario , class: "btn btn-primary"%></td>
      <td><%= link_to 'Editar', edit_usuario_path(usuario),class: "btn btn-info" %></td>
      <td><%= link_to 'Eliminar', usuario, method: :delete, data: { confirm: 'Estas seguro?' },class: "btn btn-danger" %></td>
    </tr>
  <% end %>

  </tbody>
</table>